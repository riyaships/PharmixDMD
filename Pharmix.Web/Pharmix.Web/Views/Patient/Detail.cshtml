                    <label asp-for="FirstName" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="FirstName" class="form-control" readonly />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
