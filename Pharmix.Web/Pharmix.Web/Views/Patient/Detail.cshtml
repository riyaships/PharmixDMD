                                        <span asp-validation-for="CommunicationNeedViewModel.PreferredAssistance" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <input type="hidden" asp-for="CommunicationNeedViewModel.Id" />
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label asp-for="CommunicationNeedViewModel.SpeakEnglish" class="col-sm-5 control-label"></label>
                                        <div class="col-sm-7">
                                            <input asp-for="CommunicationNeedViewModel.SpeakEnglish" type="radio" value="true" /> Yes
                                            <input asp-for="CommunicationNeedViewModel.SpeakEnglish" type="radio" value="false" /> No
                                        </div>
                                        <span asp-validation-for="CommunicationNeedViewModel.SpeakEnglish" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label asp-for="CommunicationNeedViewModel.FirstLanguage" class="control-label"></label>
                                        <input asp-for="CommunicationNeedViewModel.FirstLanguage" type="text" />
                                        <span asp-validation-for="CommunicationNeedViewModel.FirstLanguage" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="CommunicationNeedViewModel.PreferedLanguage" class="control-label"></label>
                                        <input asp-for="CommunicationNeedViewModel.PreferedLanguage" type="text" />
                                        <span asp-validation-for="CommunicationNeedViewModel.PreferedLanguage" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="CommunicationNeedViewModel.InterpreterPhone" class="control-label"></label>
                                        <input asp-for="CommunicationNeedViewModel.InterpreterPhone" type="text" />
                                        <span asp-validation-for="CommunicationNeedViewModel.InterpreterPhone" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
