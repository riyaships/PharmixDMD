@model Pharmix.Web.Models.ManageViewModels.GroupViewModel
@{
    ViewBag.Title = "Manage Module";
}

<hr class="">
<div class="col-sm-12">
    @using (Html.BeginForm("ManagePermission", "PermissionGroup", FormMethod.Post, new { @class = "form-horizontal frmManagePermission" }))
    {
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="Name" value="@Model.Name" />
        <div class="form-group">
            <label asp-for="Name" class="control-label col-sm-2 ">Group</label>
            <div class="col-sm-3">
                <input asp-for="Name" class="form-control" disabled>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2 ">Permissions</label>
            <div class="col-sm-4">
                @if (Model.PermissionViewModelList != null && Model.PermissionViewModelList.Count > 0)
                {
                    for (int i = 0; i < Model.PermissionViewModelList.Count; i++)
                    {
                        @Html.HiddenFor(m => m.PermissionViewModelList[i].Id)
                        @Html.HiddenFor(m => m.PermissionViewModelList[i].Name)
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.PermissionViewModelList[i].IsSelected)
                                @Model.PermissionViewModelList[i].Name
                            </label>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2"></label>
            <div class="col-sm-4">
                <button type="submit" class="btn btn-default" id="btnSave">Save</button>
            </div>
        </div>
        <br /><br />
    }
</div>
