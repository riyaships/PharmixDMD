                <div class="col-sm-6">
                    <input asp-for="LatestHumidity" class="form-control" placeholder="Pressure" />
                </div>
                <div class="col-sm-6">
                    @Html.DropDownListFor(m => m.LatestHumidityUnit, Model.TemperatureUnitList, null, new { @class = "form-control", placeholder = "Unit" })
                </div>
            </div>
        </div>*@
        
        <hr />
        <div class="form-group text-center">
            <button type="button" id="btnSaveIso" class="btn btn-success">Save</button>
            <button type="button" id="btnCancelIso" data-dismiss="modal" aria-hidden="true" class="btn btn-danger">Cancel</button>
        </div>
    </form>
</div>
