@model Pharmix.Web.Entities.ViewModels.PackagePlanViewModel
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="col-sm-12">
    <form id="formSave">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="PackageName" class="control-label"></label>
            <input asp-for="PackageName" class="form-control" required />
            <span asp-validation-for="PackageName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Duration" class="control-label"></label>
            <select asp-for="Duration" asp-items="(SelectList)ViewBag.Duration" class="form-control">
                <option value="Select">Select</option>
            </select>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <textarea asp-for="Details" class="form-control" cols="10" rows="4" style="resize: none;"></textarea>
        </div>
        <div class="clearfix"></div>
        <hr />
        <div class="form-group text-center">
            <button type="button" id="btnSave" class="btn btn-success">Save</button>
            <button type="button" id="btnCancel" data-dismiss="modal" aria-hidden="true" class="btn btn-danger">Cancel</button>
        </div>
    </form>
</div>
