@model Pharmix.Web.Entities.ViewModels.AccessPermissionViewModel

<table class="table table-condensed">
    <thead>
        <tr>
            <th>Sno</th>
            <th>Module Name</th>
            <th>Action</th>
            <th>Key</th>
            <th>IsHaveAccess</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.RoleModuleViewModelList != null && Model.RoleModuleViewModelList.Count() > 0)
        {

            for (int i = 0; i < Model.RoleModuleViewModelList.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model.RoleModuleViewModelList[i].ModuleName</td>
                    <td>@Model.RoleModuleViewModelList[i].Action</td>
                    <td>@Model.RoleModuleViewModelList[i].Key</td>
                    <td>
                        @Html.HiddenFor(m => m.RoleModuleViewModelList[i].ModuleId)
                        @Html.HiddenFor(m => m.RoleModuleViewModelList[i].ModuleName)
                        @Html.HiddenFor(m => m.RoleModuleViewModelList[i].Action)
                        @Html.HiddenFor(m => m.RoleModuleViewModelList[i].Key)
                        @Html.CheckBoxFor(m => m.RoleModuleViewModelList[i].IsHaveAccess, new { @class = "ddlIsHaveAccess" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>