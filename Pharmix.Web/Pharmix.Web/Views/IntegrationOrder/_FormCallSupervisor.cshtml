@using Pharmix.Data.Enums;
@model Pharmix.Web.Entities.ViewModels.IntegrationOrder.CallSupervisorViewModel

<form id="IntegrationOrderCallSupervisorForm">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @*//0 = Decline Order, 1 = Classify Order*@
        <h4 class="modal-title">Call Supervisor - Integration Order</h4>
    </div>
    <div class="modal-body form-horizontal">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SupervisorRequest.Title" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="SupervisorRequest.Title" class="form-control" placeholder="Title" />
                <span asp-validation-for="SupervisorRequest.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SupervisorRequest.IsolatorId" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="SupervisorRequest.IsolatorId" class="form-control" asp-items="@(new SelectList(Model.SupervisorRequest.Isolators,"IsolatorId", "Abbriviation"))">
                    <option selected="selected" value="">- Select Isolator -</option>
                </select>
                <span asp-validation-for="SupervisorRequest.IsolatorId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SupervisorRequest.Priority" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="SupervisorRequest.Priority" class="form-control" asp-items="Html.GetEnumSelectList<RequsetPriorityEnum>()">
                    <option selected="selected" value="">- Select Priority -</option>
                </select>
                <span asp-validation-for="SupervisorRequest.Priority" class="text-danger"></span>
            </div>
        </div>
        @*<div class="form-group">
            <label asp-for="SupervisorRequest.Type" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="SupervisorRequest.Type" class="form-control" asp-items="@(new SelectList(Model.SupervisorRequest.SupervisorRequetTypes,"Id", "Type"))">
                    <option selected="selected" value="">- Select Type -</option>
                </select>
                <span asp-validation-for="SupervisorRequest.Type" class="text-danger"></span>
            </div>
        </div>*@
        <div class="form-group">
            <label asp-for="IntegrationOrderComment.OrderId" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <select asp-for="IntegrationOrderComment.OrderId" disabled class="form-control" asp-items="@(new SelectList(Model.SupervisorRequest.IntegrationOrders,"Id", "Name"))">
                    <option selected="selected" value="">- Select Order -</option>
                </select>
                <span asp-validation-for="IntegrationOrderComment.OrderId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IntegrationOrderComment.Comment" class="col-sm-4 control-label"></label>
            <div class="col-sm-8">
                <input asp-for="IntegrationOrderComment.Comment" class="form-control" />
                <span asp-validation-for="IntegrationOrderComment.Comment" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="save-request">Save changes</button>
    </div>
</form>